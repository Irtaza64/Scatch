<%- include('./partials/header') %>

<% if(success.length>0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
    <% } %>


    <div class="w-full min-h-screen bg-neutral flex items-start px-8 py-10 gap-8">
        <div class="w-[20%] bg-white rounded-xl shadow-lg p-6 h-fit">
            <div class="flex items-center gap-2 mb-8">
                <h3 class="text-secondary font-medium">Sort by</h3>
                <form action="/shop">
                    <select class="border px-3 py-2 rounded-lg bg-neutral" name="sortby">
                        <option value="popular">Popular</option>
                        <option value="newest">Newest</option>
                    </select>
                </form>
            </div>
            
            <div class="flex flex-col gap-2 mb-8">
                <h4 class="text-lg font-medium text-secondary mb-2">Categories</h4>
                <a class="text-gray-600 hover:text-primary transition-colors" href="">New Collection</a>
                <a class="text-gray-600 hover:text-primary transition-colors" href="">All Products</a>
                <a class="text-gray-600 hover:text-primary transition-colors" href="">Discounted Products</a>
            </div>
            
            <div class="flex flex-col gap-2">
                <h4 class="text-lg font-medium text-secondary mb-2">Filters</h4>
                <a class="text-gray-600 hover:text-primary transition-colors" href="">Availability</a>
                <a class="text-gray-600 hover:text-primary transition-colors" href="">Discount</a>
            </div>
        </div>
        
        <div class="w-[80%] grid grid-cols-3 gap-6">
            <% products.forEach(function(product){ %>
                <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                    <div class="w-full h-52 flex items-center justify-center bg-gradient-to-br from-[<%= product.bgcolor %>] to-[<%= product.panelcolor %>]">
                        <img class="h-[12rem] hover:scale-110 transition-transform duration-300" 
                             src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                    </div>
                    <div class="flex justify-between items-center px-6 py-4">
                        <div>
                            <h3 class="text-lg font-medium"><%= product.name %></h3>
                            <h4 class="text-primary font-semibold">â‚¹ <%= product.price %></h4>
                        </div>
                        <a class="w-10 h-10 flex items-center justify-center rounded-full bg-neutral hover:bg-gray-200 transition-colors" 
                           href="/addtocart/<%= product._id %>">
                            <i class="ri-add-line text-xl"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('./partials/footer') %>